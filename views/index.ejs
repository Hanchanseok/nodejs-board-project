
    <section class="container">
        <h1>NODE. JS 게시판</h1>
        <table>
            <thead>
                <tr>
                    <th>넘버</th>
                    <th>제목</th>
                    <th>작성자</th>
                    <th>날짜</th>
                </tr>
            </thead>
            <tbody>
                <% posts.forEach( post => { %>
                <tr>
                    <td class="post_index"><%= post._id.toString().slice(-2) %></td>
                    <td><a href="/post/<%= post._id %>"><%= post.title %></a></td>
                    <td><%= post.writer %></td>
                    <td><%= post.createdAt.toDateString() %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <a href="/post/write" class="btn">게시물 작성</a>
    </div>