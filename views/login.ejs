
    <section class="container">
        <h1>로그인</h1>
        <form action="/login" method="POST">
            <label>
                <span>아이디</span>
                <input required name="userId" placeholder="아이디 4자 이상" minlength="4" type="text">
            </label>
            <label>
                <span>비밀번호</span>
